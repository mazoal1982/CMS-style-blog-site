<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-name">comment name:</label>
        <input class="form-input" type="text" id="comment-name" name="comment-name" />
      </div>
      <div class="form-group">
        <label for="comment-desc">description:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
<!-- Loop over each object in the comments array -->
{{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Comments:</h3>

    {{#each comments }}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><p>{{name}}</p></h4>
        <p>{{description}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

<script src="../js/comment.js"></script>